<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#0D1B2A"/>
        </shape>
    </item>
    <!-- Star/Planet representation -->
    <item android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerX="0.4"
                android:centerY="0.4"
                android:startColor="#4FC3F7"
                android:endColor="#0288D1"/>
        </shape>
    </item>
    <!-- Ring around planet -->
    <item android:left="8dp" android:top="40dp" android:right="8dp" android:bottom="40dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#80FFFFFF"/>
        </shape>
    </item>
</layer-list>
